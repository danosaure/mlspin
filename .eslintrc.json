{
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "max-len": ["warn", 120],
      "no-console": "warn",
      "no-async-promise-executor": "warn",
      "prettier/prettier": "error"
    },
    "overrides": [{
      "files": ["*.test.ts"],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": "readonly"
      }
    }]
  }
